[Unit]
Description=BOUT-EAGLE RoomServer (Python)
After=network.target

[Service]
Type=simple
User=roomserver
Group=roomserver
WorkingDirectory=/opt/bout-eagle/room_server
EnvironmentFile=/opt/bout-eagle/room_server/.env
ExecStart=/usr/bin/python3.12 -m room_server.server --config /opt/bout-eagle/room_server/config/room_server.yaml
Restart=on-failure
RestartSec=3
LimitNOFILE=65535

[Install]
WantedBy=multi-user.target
